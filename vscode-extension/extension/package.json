{
    "name": "alfred",
    "displayName": "Alfred",
    "description": "Alfred Enterprise AI Credit Governance Platform - VS Code Extension",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:alfredSidebar"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "alfredSidebarContainer",
                    "title": "Alfred",
                    "icon": "$(credit-card)"
                }
            ]
        },
        "views": {
            "alfredSidebarContainer": [
                {
                    "id": "alfredSidebar",
                    "name": "Transfer History"
                }
            ]
        },
        "commands": [
            {
                "command": "alfred.refreshTransferHistory",
                "title": "Refresh Transfer History",
                "icon": "$(refresh)"
            }
        ],
        "configuration": {
            "title": "Alfred",
            "properties": {
                "alfred.apiUrl": {
                    "type": "string",
                    "default": "http://localhost:8000",
                    "description": "Alfred API base URL"
                },
                "alfred.apiKey": {
                    "type": "string",
                    "description": "Alfred API key for authentication"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "^16.18.126",
        "@types/vscode": "^1.74.0",
        "eslint": "^8.28.0",
        "typescript": "^4.9.4"
    }
}
